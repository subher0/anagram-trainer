<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid
                android:color="#e1ff00"/>
            <stroke
                android:width="2dp"
                android:color="#bbff00"/>
            <corners
                android:radius="15dp"/>
            <padding
                android:bottom="10dp"
                android:left="10dp"
                android:right="10dp"
                android:top="10dp"/>
        </shape>

    </item>
    <item>
        <shape>
            <solid android:color="#f2ff46" />
            <stroke
                android:width="4dp"
                android:color="#efff63"/>
            <corners
                android:radius="10dp"/>
            <padding
                android:bottom="10dp"
                android:left="10dp"
                android:right="10dp"
                android:top="10dp"/>
        </shape>
    </item>
</selector>